{
  "name": "fitmind-server",
  "version": "0.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts\" --source-maps inline",
    "serve": "node ./build/server.js",
    "start": "npm run build && npm run serve",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' src/server.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watchAll",
    "prettier:check": "prettier --check 'src/**/**'",
    "prettier:watch": "onchange '**/*.{ts,js,css,html}' -- prettier --write {{changed}}",
    "prettier:all": "prettier --write '**/*.{ts,js,css,html}'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "serve:static": "serve"
  },
  "author": "Diego Romero <diego.romero@capitalone.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "@babel/cli": "^7.5.0",
    "axios": "0.19.0",
    "bcrypt": "^3.0.6",
    "body-parser": "1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "cookie-parser": "1.4.4",
    "core-js": "^3.1.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "express": "4.17.1",
    "helmet": "^3.18.0",
    "http-status-codes": "^1.3.2",
    "mongoose": "^5.6.4",
    "morgan": "1.9.1",
    "pm2": "^3.5.1",
    "ramda": "^0.26.1",
    "regenerator-runtime": "^0.13.2",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-typescript": "7.3.3",
    "@types/axios": "0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/core-js": "^2.5.2",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/helmet": "^0.0.43",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^24.0.14",
    "@types/mongoose": "^5.5.8",
    "@types/morgan": "1.7.35",
    "@types/ramda": "^0.26.18",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-jest": "24.8.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "jest": "24.8.0",
    "lint-staged": ">=8",
    "nodemon": "1.19.1",
    "onchange": "^6.0.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "serve": "^11.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "8.2.0",
    "typescript": "3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{js, ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
